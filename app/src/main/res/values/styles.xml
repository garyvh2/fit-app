<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <!-- Button Styles -->

    <style name="PrimaryButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="CancelButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="SuccessButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/aquaGreen</item>
    </style>

</resources>
